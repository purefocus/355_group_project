<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/label_artifact_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="29dp"
        android:layout_marginEnd="65dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="16dp"
        android:text="Title:"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/label_artifact_description"
        app:layout_constraintEnd_toStartOf="@+id/field_artifact_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/field_artifact_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="My Artifact"
        app:layout_constraintBottom_toTopOf="@+id/field_artifact_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/label_artifact_title"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/field_artifact_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="248dp"
        android:layout_marginEnd="2dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:text="This artifact was found at...."
        app:layout_constraintBottom_toTopOf="@+id/field_artifact_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/label_artifact_description"
        app:layout_constraintTop_toBottomOf="@+id/field_artifact_title" />

    <TextView
        android:id="@+id/label_artifact_description"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginBottom="97dp"
        android:layout_marginStart="12dp"
        android:text="Description:"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/label_artifact_picture"
        app:layout_constraintEnd_toStartOf="@+id/field_artifact_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_artifact_title" />

    <TextView
        android:id="@+id/label_artifact_picture"
        android:layout_width="65dp"
        android:layout_height="0dp"
        android:layout_marginBottom="59dp"
        android:layout_marginEnd="38dp"
        android:layout_marginStart="38dp"
        android:text="Pictures:"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_upload_pic"
        app:layout_constraintEnd_toStartOf="@+id/field_artifact_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_artifact_description" />

    <Button
        android:id="@+id/btn_upload_pic"
        android:layout_width="199dp"
        android:layout_height="0dp"
        android:layout_marginBottom="51dp"
        android:layout_marginStart="38dp"
        android:text="Upload picture..."
        app:layout_constraintBottom_toTopOf="@+id/check_for_sale"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_artifact_picture" />

    <CheckBox
        android:id="@+id/check_for_sale"
        android:layout_width="60dp"
        android:layout_height="37dp"
        android:layout_marginBottom="86dp"
        android:layout_marginEnd="63dp"
        android:layout_marginStart="32dp"
        android:checked="false"
        android:duplicateParentState="false"
        android:onClick="check_for_sale"
        android:text="For Sale"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/label_artifact_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_upload_pic" />

    <EditText
        android:id="@+id/field_artifact_price"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="51dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/btn_make_catalog_entry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/label_artifact_price"
        app:layout_constraintTop_toBottomOf="@+id/field_artifact_description" />

    <TextView
        android:id="@+id/label_artifact_price"
        android:layout_width="0dp"
        android:layout_height="27dp"
        android:layout_marginBottom="33dp"
        android:layout_marginEnd="43dp"
        android:text="Price"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_make_catalog_entry"
        app:layout_constraintEnd_toStartOf="@+id/field_artifact_price"
        app:layout_constraintStart_toEndOf="@+id/check_for_sale" />

    <Button
        android:id="@+id/btn_make_catalog_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="11dp"
        android:onClick="btn_make_entry"
        android:text="Make Post"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/field_artifact_price"
        app:layout_constraintTop_toBottomOf="@+id/field_artifact_price" />

</android.support.constraint.ConstraintLayout>
