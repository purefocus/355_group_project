<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/label_artifact_title"
        android:layout_width="0dp"
        android:layout_height="21dp"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Title:"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/label_artifact_description"
        app:layout_constraintEnd_toStartOf="@+id/field_artifact_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/field_artifact_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="23dp"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="My Artifact"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/label_artifact_title"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/field_artifact_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="9dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:text="This artifact was found at...."
        app:layout_constraintEnd_toEndOf="@+id/field_artifact_title"
        app:layout_constraintTop_toBottomOf="@+id/field_artifact_title" />

    <TextView
        android:id="@+id/label_artifact_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="69dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="35dp"
        android:text="Description:"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/label_artifact_picture"
        app:layout_constraintEnd_toStartOf="@+id/field_artifact_description"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_artifact_title" />

    <TextView
        android:id="@+id/label_artifact_picture"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="62dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="69dp"
        android:text="Pictures:"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/cat_img"
        app:layout_constraintEnd_toStartOf="@+id/cat_img"
        app:layout_constraintStart_toStartOf="@+id/btn_upload_pic"
        app:layout_constraintTop_toBottomOf="@+id/label_artifact_description" />

    <Button
        android:id="@+id/btn_upload_pic"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="14dp"
        android:onClick="btn_make_entry"
        android:text="Upload from device"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_upload_from_url"
        app:layout_constraintEnd_toStartOf="@+id/btn_upload_from_url"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/check_for_sale"
        android:layout_width="60dp"
        android:layout_height="37dp"
        android:layout_marginBottom="86dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="86dp"
        android:checked="false"
        android:duplicateParentState="false"
        android:onClick="check_for_sale"
        android:text="For Sale"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_upload_pic" />

    <EditText
        android:id="@+id/field_artifact_price"
        android:layout_width="64dp"
        android:layout_height="44dp"
        android:layout_marginBottom="81dp"
        android:layout_marginEnd="36dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="84dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_upload_from_url"
        app:layout_constraintStart_toEndOf="@+id/cat_img"
        app:layout_constraintTop_toTopOf="@+id/btn_upload_from_url" />

    <TextView
        android:id="@+id/label_artifact_price"
        android:layout_width="72dp"
        android:layout_height="27dp"
        android:layout_marginBottom="81dp"
        android:layout_marginTop="85dp"
        android:text="Price"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btn_make_catalog_entry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_upload_pic" />

    <Button
        android:id="@+id/btn_make_catalog_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="26dp"
        android:onClick="btn_make_entry"
        android:text="Make Post"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/field_artifact_price" />

    <ImageView
        android:id="@+id/cat_img"
        android:layout_width="94dp"
        android:layout_height="63dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="154dp"
        android:layout_marginEnd="121dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="154dp"
        app:layout_constraintBottom_toTopOf="@+id/check_for_sale"
        app:layout_constraintEnd_toEndOf="@+id/field_artifact_description"
        app:layout_constraintStart_toStartOf="@+id/label_artifact_picture"
        app:layout_constraintTop_toTopOf="@+id/field_artifact_title" />

    <Button
        android:id="@+id/btn_upload_from_url"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginBottom="173dp"
        android:layout_marginEnd="14dp"
        android:onClick="btn_make_entry"
        android:text="Upload from URL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_upload_pic" />

</android.support.constraint.ConstraintLayout>
