<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/label_artifact_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="45dp"
        android:layout_marginEnd="61dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="16dp"
        android:text="Title:"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/label_artifact_description"
        app:layout_constraintEnd_toStartOf="@+id/field_artifact_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/field_artifact_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="My Artifact"
        app:layout_constraintBottom_toTopOf="@+id/field_artifact_description"
        app:layout_constraintEnd_toEndOf="@+id/field_artifact_description"
        app:layout_constraintStart_toEndOf="@+id/label_artifact_title"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/field_artifact_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="234dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:text="This artifact was found at...."
        app:layout_constraintBottom_toTopOf="@+id/field_artifact_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/label_artifact_description"
        app:layout_constraintTop_toBottomOf="@+id/field_artifact_title" />

    <TextView
        android:id="@+id/label_artifact_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:layout_marginStart="16dp"
        android:text="Description:"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/label_artifact_picture"
        app:layout_constraintEnd_toStartOf="@+id/field_artifact_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_artifact_title" />

    <TextView
        android:id="@+id/label_artifact_picture"
        android:layout_width="91dp"
        android:layout_height="0dp"
        android:layout_marginBottom="35dp"
        android:layout_marginStart="38dp"
        android:text="Pictures:"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_upload_pic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_artifact_description" />

    <Button
        android:id="@+id/btn_upload_pic"
        android:layout_width="160dp"
        android:layout_height="0dp"
        android:layout_marginBottom="71dp"
        android:layout_marginStart="38dp"
        android:text="Upload picture..."
        app:layout_constraintBottom_toTopOf="@+id/check_for_sale"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_artifact_picture" />

    <CheckBox
        android:id="@+id/check_for_sale"
        android:layout_width="67dp"
        android:layout_height="38dp"
        android:layout_marginBottom="91dp"
        android:layout_marginEnd="21dp"
        android:layout_marginStart="38dp"
        android:checked="false"
        android:duplicateParentState="false"
        android:onClick="check_for_sale"
        android:text="For Sale"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/label_artifact_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_upload_pic" />

    <EditText
        android:id="@+id/field_artifact_price"
        android:layout_width="93dp"
        android:layout_height="0dp"
        android:layout_marginBottom="22dp"
        android:layout_marginEnd="69dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="$200.00"
        app:layout_constraintBottom_toTopOf="@+id/btn_make_catalog_entry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/label_artifact_price"
        app:layout_constraintTop_toBottomOf="@+id/field_artifact_description" />

    <TextView
        android:id="@+id/label_artifact_price"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="22dp"
        android:text="Price"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/field_artifact_price"
        app:layout_constraintEnd_toStartOf="@+id/field_artifact_price"
        app:layout_constraintStart_toEndOf="@+id/check_for_sale"
        app:layout_constraintTop_toTopOf="@+id/field_artifact_price" />

    <Button
        android:id="@+id/btn_make_catalog_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="36dp"
        android:onClick="btn_make_entry"
        android:text="Make Post"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/check_for_sale"
        app:layout_constraintTop_toBottomOf="@+id/field_artifact_price" />

</android.support.constraint.ConstraintLayout>
